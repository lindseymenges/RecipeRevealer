<h1>Create A New Account</h1>

<form action='/signup' method='post'>
    <h2>Username:</h2> <input type='text' name='username' placeholder='Username' 
      <%= "value='#{@user.username}'" if flash[:errors] %>>
        <% if flash[:errors] && flash[:errors][:username] %>
          <%= flash[:errors][:username].first %>
        <% end %><br>
    <h2>Password:</h2> <input type='password' name='password' placeholder='Password'><br><br>
    <input type='submit' value='Sign up' class="sign_up">
</form><br>

<a href='/' class="homepage_link">Return to Homepage</a>